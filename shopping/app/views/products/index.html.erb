<div class="col-md-12">
  <h1>Product List</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Name</td>
        <td>Description</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= image_tag product.image.small.url %></td>
          <td>
            <%= link_to(product.name, product_path(product)) %>
          </td>
          <td>
            <%= product.description %>
          </td>
          <td>
            <%= link_to  "加入購物車", shopping_cart_product_path(product), method: "post", class: "btn btn-warning" %>
          </td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>