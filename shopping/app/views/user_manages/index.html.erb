<div class="col-xs-12  col-md-12">
    <h1>User List</h1>
</div>
<div class="col-xs-12  col-md-10">
<table class="table table-hover">
    <tr>
      <th>Name(NickName)</th>
      <th>credit score</th>
      <th>phone</th>
      <th>memo</th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to  "#{user.name}(#{user.nickname})", user_manage_path(user) %></td>
        <td><%= user.rating %></td>
        <td><%= user.phone %></td>
        <td><%= user.phone_memo %></td>
      </tr>
    <% end %>
  </table>
</div>
<div class="col-xs-12  col-md-2">
    <div class="list-group">
        <a class="list-group-item active">
            管理類別
        </a>
        <%= link_to  "產品管理", product_manages_path ,class:'list-group-item'%>
        <%= link_to  "訂單管理", orders_path ,class:'list-group-item'%>
    </div>
</div>