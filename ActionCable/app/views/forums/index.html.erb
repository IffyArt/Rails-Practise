<div class="col-md-12">
  <div class="group">
    <%= link_to("New forum", new_forum_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
      </tr>
    </thead>
    <tbody>
      <% @forums.each do |forum| %>
        <tr>
          <td>#</td>
          <td><%= link_to(forum.title, forum_path(forum)) %></td>
          <td><%= forum.description %></td>
          <td>
              <%= link_to("Edit", edit_forum_path(forum), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", forum_path(forum),    class: "btn btn-sm btn-default", method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>